<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhibaowang.ui.CalendarActivity">

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CalendarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/calendar"
        android:gravity="center">
        <com.zhibaowang.component.ZButton
            android:id="@+id/button_calendar_ok"
            style="@style/style_button_calendar"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            app:text_center="确定"
            />
        <com.zhibaowang.component.ZButton
            android:layout_marginLeft="30dp"
            android:id="@+id/button_calendar_cancel"
            style="@style/style_button_calendar"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            app:text_center="取消"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
