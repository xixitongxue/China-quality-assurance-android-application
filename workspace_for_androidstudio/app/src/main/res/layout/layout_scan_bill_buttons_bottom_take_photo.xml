<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:background="#061721"
        android:orientation="horizontal"
        android:padding="0dp">


        <com.zhibaowang.component.ZButton
            android:id="@+id/button_bottom_takephoto_scan_bill"
            style="@style/style_button_upload_bottomtwo_takephoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            test:img_center_choose="@drawable/green_scanning_photography"
            test:img_center="@drawable/green_scanning_photography"
            test:text_center="@string/string_take_photo"
            />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>