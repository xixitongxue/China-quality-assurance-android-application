<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>
    <declare-styleable name="zbutton">
        <attr name="text_center" format="string"></attr>
        <attr name="text_left" format="string"></attr>
        <attr name="text_right" format="string"></attr>
        <attr name="percent_bitmap_right" format="string"></attr>
        <attr name="percent_bitmap_center" format="string"></attr>
        <attr name="percent_bitmap_left" format="string"></attr>
        <attr name="textarr" format="string"></attr>
        <attr name="w_space_text" format="dimension"></attr>
        <attr name="orientation" format="string">horizontal|vertical</attr>
        <attr name="textsize" format="dimension"></attr>
        <attr name="textcolor" format="color"></attr>
        <attr name="textcolor_choose" format="color"></attr>
        <attr name="textcolor_click" format="color"></attr>
        <attr name="color_back" format="color"></attr>
        <attr name="color_back_choose" format="color"></attr>
        <attr name="color_back_click" format="color"></attr>
        <attr name="color_border" format="color"></attr>
        <attr name="color_border_choose" format="color"></attr>
        <attr name="color_border_click" format="color"></attr>
        <attr name="percent_w" format="float"></attr>
        <attr name="percent_h" format="float"></attr>
        <attr name="img_center" format="reference"></attr>
        <attr name="img_center_choose" format="reference"></attr>
        <attr name="img_center_click" format="reference"></attr>
        <attr name="img_back" format="reference"></attr>
        <attr name="img_back_choose" format="reference"></attr>
        <attr name="img_back_click" format="reference"></attr>
        <attr name="img_left" format="reference"></attr>
        <attr name="img_right" format="reference"></attr>
        <attr name="w_space" format="dimension"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="w_border" format="dimension"></attr>
        <attr name="color_text_border" format="color"></attr>
        <attr name="color_circle_border" format="color"></attr>
        <attr name="drawtextborder" format="boolean">false</attr>
        <attr name="drawcircleborder" format="boolean">false</attr>
        <attr name="isSpinner" format="boolean">false</attr>
        <attr name="drawcircleimg" format="boolean">false</attr>
        <attr name="radius_lefttop_x" format="dimension">0</attr>
        <attr name="radius_lefttop_y" format="dimension">0</attr>
        <attr name="radius_righttop_x" format="dimension">0</attr>
        <attr name="radius_righttop_y" format="dimension">0</attr>
        <attr name="radius_leftbottom_x" format="dimension">0</attr>
        <attr name="radius_leftbottom_y" format="dimension">0</attr>
        <attr name="radius_rightbottom_x" format="dimension">0</attr>
        <attr name="radius_rightbottom_y" format="dimension">0</attr>
        <attr name="isautochange" format="boolean">0</attr>
    </declare-styleable>
    <declare-styleable name="zspinner">
        <attr name="color_back_spinner" format="color"></attr>
        <attr name="img_right_zspinner" format="reference"></attr>
        <attr name="percent_img_right_zspinner" format="float"></attr>
        <attr name="radius_spinner" format="dimension"></attr>
    </declare-styleable>
    <!-- RTextView -->
    <declare-styleable name="ZEditText">

        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />

        <!--虚线边框宽度/间隔-->
        <attr name="border_dash_width" format="dimension" />
        <attr name="border_dash_gap" format="dimension" />

        <!--边框宽度-->
        <attr name="border_width_normal" format="dimension" />
        <attr name="border_width_pressed" format="dimension" />
        <attr name="border_width_unable" format="dimension" />

        <!--边框颜色-->
        <attr name="border_color_normal" format="color" />
        <attr name="border_color_pressed" format="color" />
        <attr name="border_color_unable" format="color" />

        <!--背景颜色-->
        <attr name="background_normal" format="color" />
        <attr name="background_pressed" format="color" />
        <attr name="background_unable" format="color" />

        <!--文本颜色-->
        <attr name="text_color_normal" format="color" />
        <attr name="text_color_pressed" format="color" />
        <attr name="text_color_unable" format="color" />

        <!--图标资源-->
        <attr name="icon_src_normal" format="reference" />
        <attr name="icon_src_pressed" format="reference" />
        <attr name="icon_src_unable" format="reference" />

        <!--图标、大小、位置-->
        <attr name="icon_height" format="dimension" />
        <attr name="icon_width" format="dimension" />
        <attr name="icon_direction">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!--字体样式-->
        <attr name="text_typeface" format="string" />
        <!--my提示字体-->
        <attr name="myhint" format="string" />
        <!--my提示字体大小-->
        <attr name="textsize_myhint" format="dimension" />
        <!--my提示字体颜色-->
        <attr name="textcolor_myhint" format="color" />
    </declare-styleable>
</resources>
